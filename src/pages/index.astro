---
import BaseLayout from "../layouts/BaseLayout.astro";

// Configurable Twitch settings
const twitchChannel = "gnnl_tv";
const twitchParent = "gnnl_tv.patrickbest.com";
---

<BaseLayout title="GNNL TV - Home" description="GNNL TV" hideNavigation={true}>
  <div class="homepage">
    <section class="hero">
      <h1>GNNL_TV</h1>
      <h2>TACTICAL STREAMING</h2>
      <p>GNNL_TV is a community livestreaming project for exploring hybrid solidarities.</p>
      <a href="/manifesto" class="nav-card">
        <h3>Manifesto</h3>
      </a>
    </section>

    <section class="twitch-embed">
      <h2>Live Stream</h2>
      <div class="twitch-container">
        <!-- Twitch Embed -->
        <iframe
          src={`https://player.twitch.tv/?channel=${twitchChannel}&parent=${twitchParent}`}
          height="480"
          width="100%"
          allowfullscreen
        >
        </iframe>
      </div>
      <p class="embed-note">Next live: 1 May</p>
    </section>

    <section class="site-navigation">
      <div class="nav-cards">
        <a href="/san" class="nav-card">
          <h3>San</h3>
        </a>
        <a href="/communiques" class="nav-card">
          <h3>Communiques</h3>
        </a>
        <a href="/chat" class="nav-card">
          <h3>Chat</h3>
        </a>
      </div>
    </section>
  </div>
</BaseLayout>
