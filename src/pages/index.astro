---
import BaseLayout from "../layouts/BaseLayout.astro";

// Configurable Twitch settings
const twitchChannel = "your_channel_name"; // Change this to your Twitch channel
const twitchParent = "localhost"; // Change this to your domain in production
---

<BaseLayout title="GNNL TV - Home" description="GNNL TV">
  <div class="homepage">
    <section class="hero">
      <h1>GNNL TV</h1>
      <h2>TACTICAL STREAMING</h2>
      <p>GNNL_TV is aâ€¦lorem ipsem</p>
      <a href="/manifesto" class="nav-card">
        <h3>Manifesto</h3>
      </a>
    </section>

    <section class="twitch-embed">
      <h2>Live Stream</h2>
      <div class="twitch-container">
        <!-- Twitch Embed -->
        <iframe
          src={`https://player.twitch.tv/?channel=${twitchChannel}&parent=${twitchParent}`}
          height="480"
          width="100%"
          allowfullscreen
        >
        </iframe>
      </div>
      <p class="embed-note">
        To configure the Twitch embed, edit the <code>twitchChannel</code> and <code
          >twitchParent</code
        >
        variables at the top of <code>src/pages/index.astro</code>.
      </p>
    </section>

    <section class="site-navigation">
      <h2>Explore Our Content</h2>
      <div class="nav-cards">
        <a href="/blog-type-2" class="nav-card">
          <h3>Blog Type 2</h3>
          <p>Read blog type 2 posts</p>
        </a>
        <a href="/about" class="nav-card">
          <h3>About</h3>
          <p>Learn more about us</p>
        </a>
      </div>
    </section>
  </div>
</BaseLayout>
